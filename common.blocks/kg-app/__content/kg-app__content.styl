.kg-app__content-wrap
  flex 1
  position relative
  min-width 768px
  max-width 1280px
  margin 0 128px
  &.kg-app__content-wrap_full-width
    max-width none
.kg-app__content
  background-color #CCFFFF
  position absolute
  width 100%
  height 100%
  box-sizing border-box
  overflow-y auto
  padding 12px
  font-size: 1.6em
