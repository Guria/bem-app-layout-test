html
.page 
  margin 0
  height 100%
  overflow hidden
.kg-app
  height 100%
  display flex
  flex-direction column
  align-content stretch
.kg-app__content-row
  height 100%
  display flex
  flex-direction row
  align-content stretch
  justify-content space-between
.kg-app__content-row:before
  content: ''
  flex: 0 0 128px;
  align-self: flex-start
.kg-app__content-row:after
  content: ''
  flex: 0 0 128px;
  align-self: flex-end
